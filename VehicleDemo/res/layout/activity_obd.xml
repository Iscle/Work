            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/req_left_fuel" />
               
           <Button
            android:id="@+id/ReqOdoInfo"
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/odometer_info" />
           
           <Button
            android:id="@+id/ReqTimeInfo"
