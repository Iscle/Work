            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/AddedOdoInfo"/>
            <TextView
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/CurDriveTime"/>
            <TextView
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/CurIdleTime"/>
            
            <Button
            android:id="@+id/CalibrageOdometer"
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/calibrate_odometer" />
            
           <Button
            android:id="@+id/ReqHabitData"
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/req_habit" />
           
           <Button
