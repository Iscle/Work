            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/CurTravelFuelConsume"/>
            <TextView
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/TotalFuelConsume"/>
            <TextView
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/MalfunctionIndicatorNo"/>
            <TextView
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/CurTravelQuickSpeedUpTimes"/>
            <TextView
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/CurTravelQuickSpeedDownTimes"/>
            <Button
            android:id="@+id/OpenStream"
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/open_stream" />
            <Button
            android:id="@+id/Restart"
            android:layout_width="200px"
            android:layout_height="60px"
            android:text="@string/hot_restart" />
          
        </GridLayout>
        <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="17"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >
            <EditText
            android:id="@+id/BatteryVoltage"
            android:layout_width="120px"
            android:layout_height="60px"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"/>
            <EditText
            android:id="@+id/EngineSpeed"
            android:layout_width="120px"
            android:layout_height="60px"
            android:editable="false"
            android:focusableInTouchMode="false"
